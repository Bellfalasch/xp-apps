{
  "name": "xp-apps",
  "version": "1.0.0",
  "description": "Enonix XP Applications",
  "scripts": {
    "build": "npm-run-all --parallel build:app-*",
    "build:app-applications": "npm run --prefix modules/app-applications/ build",
    "build:app-contentstudio": "npm run --prefix modules/app-contentstudio/ build",
    "build:app-main": "npm run --prefix modules/app-main/ build",
    "build:app-users": "npm run --prefix modules/app-users/ build",
    "lint:quick": "runwith scripts/lint.js --prop=diff",
    "lint": "tslint modules/**/**/src/main/resources/**/*.ts --exclude **/*.d.ts",
    "lint:fix": "tslint modules/**/**/src/main/resources/**/*.ts --fix --exclude **/*.d.ts || exit 0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.1",
    "runwith": "^0.3.0",
    "simple-git": "^1.77.0",
    "tslint": "^4.2.0",
    "typescript": "^2.0.10"
  },
  "engines": {
    "node": ">= 6.9.2",
    "npm": ">= 3.10.9"
  }
}
